<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:useDefaultMargins="true"
    tools:context="com.rnb.install.buildcalculator.CreateBuildFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buildNameLabel"
        android:layout_column="0"
        android:textSize="22sp"
        android:layout_row="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/buildName"
        android:layout_column="1"
        android:layout_row="0" />

    <TextView
        android:text="Weapon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weaponLabel"
        android:layout_column="0"
        android:textSize="22sp"
        android:layout_row="1"/>

    <!--
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/weaponName"
        android:layout_column="1"
        android:layout_row="1" />
        -->

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weaponSpinner"/>

    <TextView
        android:text="Gear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gearLabel"
        android:layout_column="0"
        android:textSize="22sp"
        android:layout_row="2"/>

    <!--
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/gearName"
        android:layout_column="1"
        android:layout_row="2" />
        -->

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gearSpinner" />

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:layout_column="0"
        android:layout_columnSpan="2" />


</GridLayout>
